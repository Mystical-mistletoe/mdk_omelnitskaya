<Window x:Class="UIApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UIApplication"
        mc:Ignorable="d"
        Title="Добро пожаловать" Height="400" Width="300"
    ResizeMode="NoResize">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="200">
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Модер:Ekaterine па-ль: studentokei" Margin="5" VerticalAlignment="Center"/>
            <Button x:Name="LoginButton" Click="LoginButton_Click"
                Content="Войти" Margin="0,10" Height="40" FontSize="16"/>
            <Button x:Name="RegisterButton" Click="RegisterButton_Click"
                Content="Зарегистрироваться" Margin="0,10" Height="40" FontSize="16"/>
        </StackPanel>
    </Grid>
</Window>
