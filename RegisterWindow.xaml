<Window x:Class="UIApplication.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UIApplication"
        mc:Ignorable="d"
        Title="Регистрация" Height="300" Width="350"
    WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Логин:" Margin="5" VerticalAlignment="Center"/>
        <TextBox x:Name="txtLogin" Grid.Row="0" Grid.Column="1" Margin="5" Padding="3"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Пароль:" Margin="5" VerticalAlignment="Center"/>
        <PasswordBox x:Name="pbPassword" Grid.Row="1" Grid.Column="1" Margin="5" Padding="3"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Повторите пароль:" Margin="5" VerticalAlignment="Center"/>
        <PasswordBox x:Name="pbConfirmPassword" Grid.Row="2" Grid.Column="1" Margin="5" Padding="3"/>

        <Button x:Name="btnRegisterUser" Content="Зарегистрироваться"
            Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
            Margin="10" Padding="10 5" Click="BtnRegisterUser_Click"/>

        <Button x:Name="btnBackToMain" Content="Назад"
            Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
            Margin="5" Padding="10 5" Click="BtnBackToMain_Click"/>
    </Grid>
</Window>
