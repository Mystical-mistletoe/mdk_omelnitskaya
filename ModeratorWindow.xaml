<Window x:Class="UIApplication.ModeratorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UIApplication"
        mc:Ignorable="d"
        Title="Окно модератора" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="10">
            <Label Content="Список услуг:"/>
            <ListBox x:Name="servicesListBox" Height="200" SelectionChanged="servicesListBox_SelectionChanged"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="10">
            <Label Content="Редактирование услуги:"/>
            <TextBox x:Name="serviceNameTextBox" Margin="0,0,0,5"/>
            <TextBox x:Name="serviceDescriptionTextBox" Margin="0,0,0,5" Height="60" TextWrapping="Wrap"/>
            <TextBox x:Name="servicePriceTextBox" Margin="0,0,0,5"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="addServiceButton" Content="Добавить" Margin="5" Click="addServiceButton_Click"/>
                <Button x:Name="updateServiceButton" Content="Обновить" Margin="5" Click="updateServiceButton_Click"/>
                <Button x:Name="deleteServiceButton" Content="Удалить" Margin="5" Click="deleteServiceButton_Click"/>
            </StackPanel>

            <Button x:Name="exportAppointmentsButton" Content="Экспорт записей" Margin="5" Click="exportAppointmentsButton_Click"/>
            <Button x:Name="logoutButton" Content="Выйти" Margin="5" Click="logoutButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
